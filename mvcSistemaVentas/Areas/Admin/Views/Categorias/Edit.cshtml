@model mvcSistemaVentas.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<h3 class="text-center">Editar categoría</h3>

<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 Border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Estado"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Fecharegistro"></label>
                </div>
                <div class="col-8">
                    <input type="date" asp-for="Fecharegistro" class="form-control" />
                    <span asp-validation-for="Fecharegistro" class="text-danger"></span>
                </div>
            </div>
            <br />
           
            </div>
        </div>
    </div>

    <div class="row px-2 offset-1 mt-3">
        <div class="col">
            <button type="submit" class="btn btn-primary form-control">Editar Categoría</button>
        </div>
        <div class="col">
            <a asp-action="Index" class="btn btn-success form-control">Volver atrás</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}