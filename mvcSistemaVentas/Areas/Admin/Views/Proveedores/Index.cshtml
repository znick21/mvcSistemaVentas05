@{
    ViewData["Title"] = "Lista de Proveedores";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Proveedores</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Crear Nuevo Proveedor
            </a>
        </div>
    </div>
    <br />
    <br />
    <table id="tblProveedores" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>RazonSocial</th>
                <th>Documento o Nit</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Estado</th>
                <th>Fecha de Registro</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/proveedor.js"></script>
}